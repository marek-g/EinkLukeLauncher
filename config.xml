<?xml version='1.0' encoding='utf-8'?>
<widget id="luke.launcher" version="1.0.15" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LukeLauncher</name>
    <description>
        A category based launcher. 
    </description>
    <author email="info@lukelauncher.de" href="https://lukelauncher.de/">
        Lukas Soekefeld
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.3.2" />
    <plugin name="com.lampa.startapp" spec="^6.1.6" />
    
    <preference name="AndroidLaunchMode" value="singleTask"/>
    
	<preference name="cordova.plugins.diagnostic.modules" value="EXTERNAL_STORAGE" />

    <platform name="android">
	
		<hook type="before_build" src="clean_build.sh" />
		<hook type="before_compile" src="clean_compile.sh" />
		
        <icon src="logo_small.png" />
        
        <preference name="SplashScreen" value="none"/>


        <config-file target="AndroidManifest.xml" parent="./application/activity" android:excludeFromRecents="true" android:launchMode="singleTask" >
		
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.HOME" />
				<category android:name="android.intent.category.DEFAULT" />
	
				<action android:name="com.android.launcher.action.INSTALL_SHORTCUT" />
				<action android:name="com.android.launcher.action.UNINSTALL_SHORTCUT" />
				
				<action android:name="android.content.pm.action.CONFIRM_PIN_SHORTCUT" />
				
				
			</intent-filter> 


            
        </config-file>
        
      <config-file target="AndroidManifest.xml" parent="/manifest"  android:excludeFromRecents="true">
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        	
        <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
        <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT"/>
        
        <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
        
	  </config-file>
    

    </platform>
    
    
    
    
    <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity">
    <activity android:configChanges="orientation|keyboardHidden|screenSize" android:windowSoftInputMode="adjustPan" android:excludeFromRecents="true"  android:launchMode="singleTask" />
    
    <intent-filter>
      <action android:name="android.intent.action.MAIN" />
      <category android:name="android.intent.category.HOME" />
      <category android:name="android.intent.category.DEFAULT" />
      
	  <action android:name="com.android.launcher.action.INSTALL_SHORTCUT" />
	  <action android:name="com.android.launcher.action.UNINSTALL_SHORTCUT" />
 
    </intent-filter> 
    

 
          
              
</edit-config>

</widget>
